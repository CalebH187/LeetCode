#include <algorithm>
#include <iterator>

class Solution {
public:
    bool isPowerOfTwo(int n) {
        int x[31];
        int y = 2;
        int MAX = 1073741824;
        int i = 0;
        while (y < MAX) {
            x[i] = y;
            y = y * 2;
            i++;
        }
        bool exists = std::find(std::begin(x), std::end(x), n) != std::end(x);
        return exists;
    }
};
